{
  "version": 2,
  "installCommand": "corepack enable && pnpm i -w --no-frozen-lockfile",
  "buildCommand": "corepack enable && pnpm i -w && pnpm --filter @arkaios/ui build",
  "outputDirectory": "apps/ui/dist",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://arkaios-api.onrender.com/api/$1" },
    { "source": "/health", "destination": "https://arkaios-gateway-open.onrender.com/aida/health" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "max-age=0" }
      ]
    }
  ]
}
